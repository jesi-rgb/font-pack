{
  "manifest_version": 3,
  "name": "Font Pack",
  "version": "0.1",
  "description": "Save all the fonts you run into in your fontpack!",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts.html",
        "fonts.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
